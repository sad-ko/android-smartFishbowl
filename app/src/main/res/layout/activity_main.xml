<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/sub_backgroundColor"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/actionsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_mono"
            android:paddingTop="30dp"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tankStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_mono"
            android:paddingTop="150dp"
            android:text="@string/tank_okay"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="normal" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="TankVector"
            app:srcCompat="@drawable/tank_full"
            tools:ignore="HardcodedText" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/tankDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_mono"
            android:paddingTop="0dp"
            android:text="@string/tank_desc_err"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="normal"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="vertical">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/nav_background_curved"
                android:gravity="center|bottom"
                android:id="@+id/bottom_nav"
                tools:ignore="VisualLintBottomNav">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|center_vertical"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/configFrame"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <ImageButton
                            android:id="@+id/configButton"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="#001D5A91"
                            android:contentDescription="ConfigButton"
                            android:padding="10dp"
                            app:srcCompat="@drawable/settings_48px"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/configButtonTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/roboto_mono"
                            android:text="Config"
                            android:textAllCaps="false"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            tools:ignore="HardcodedText" />

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/homeFrame"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:paddingHorizontal="40dp">

                        <ImageButton
                            android:id="@+id/homeButton"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:background="#001D5A91"
                            android:contentDescription="HomeButton"
                            android:padding="10dp"
                            app:srcCompat="@drawable/home_focused"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/homeButtonTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/roboto_mono"
                            android:text="Home"
                            android:textAllCaps="false"
                            android:textSize="12sp"
                            android:textStyle="normal|bold"
                            tools:ignore="HardcodedText" />

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/actionsFrame"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <ImageButton
                            android:id="@+id/actionsButton"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="#001D5A91"
                            android:contentDescription="ActionsButton"
                            android:padding="10dp"
                            app:srcCompat="@drawable/play_arrow_48px"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/actionsButtonTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/roboto_mono"
                            android:text="Actions"
                            android:textAllCaps="false"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            tools:ignore="HardcodedText" />

                    </FrameLayout>

                </LinearLayout>

            </com.google.android.material.bottomnavigation.BottomNavigationView>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>