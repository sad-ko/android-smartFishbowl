<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="soa.project.smartfishbowl.activities.ActionsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/sub_backgroundColor"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/actionsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_mono_medium"
            android:paddingTop="30dp"
            android:text="Actions"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="34sp"
            android:textStyle="normal"
            tools:ignore="HardcodedText" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            android:paddingVertical="20dp">

            <Button
                android:id="@+id/feedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="232dp"
                android:height="69dp"
                android:backgroundTint="@color/water_10"
                android:gravity="center"
                android:text="Feed Fishes"
                android:textColor="@color/white_10"
                android:textSize="24sp"
                tools:ignore="HardcodedText" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <Button
                android:id="@+id/cleanButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="232dp"
                android:height="69dp"
                android:backgroundTint="@color/green_10"
                android:gravity="center"
                android:text="Clean Tank"
                android:textColor="@color/white_10"
                android:textSize="24sp"
                tools:ignore="HardcodedText" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <Button
                android:id="@+id/lightsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="232dp"
                android:height="69dp"
                android:backgroundTint="@color/red_10"
                android:gravity="center"
                android:text="Switch Lights"
                android:textColor="@color/white_10"
                android:textSize="24sp"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="vertical">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/nav_background_curved"
                android:gravity="center|bottom"
                tools:ignore="VisualLintBottomNav">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|center_vertical"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/configFrame"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        tools:ignore="UselessParent">

                        <ImageButton
                            android:id="@+id/configButton"
                            android:layout_width="60dp"
                            android:layout_height="56dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="4dp"
                            android:background="#001D5A91"
                            android:contentDescription="ConfigButton"
                            app:srcCompat="@drawable/svg_settings_24px"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/configButtonTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|bottom|start"
                            android:layout_marginStart="28dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/roboto_mono"
                            android:text="Notif"
                            android:textAllCaps="false"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            tools:ignore="HardcodedText" />

                        <ImageView
                            android:id="@+id/focused"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|end"
                            android:layout_marginBottom="5dp"
                            android:layout_marginHorizontal="33dp"
                            android:contentDescription="Focused"
                            app:srcCompat="@drawable/svg_focused_menu"
                            tools:ignore="HardcodedText" />


                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="33dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/homeImage"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|top"
                                android:layout_marginTop="23dp"
                                android:contentDescription="HomeImage"
                                app:srcCompat="@drawable/svg_home_24px"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/homeTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|bottom"
                                android:layout_marginBottom="10dp"
                                android:fontFamily="@font/roboto_mono"
                                android:text="Home"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textSize="12sp"
                                android:textStyle="normal"
                                tools:ignore="HardcodedText,VisualLintOverlap" />

                            <Button
                                android:id="@+id/homeButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|top"
                                android:layout_marginTop="10dp"
                                android:background="?selectableItemBackgroundBorderless"
                                android:contentDescription="HomeButton"
                                tools:ignore="HardcodedText" />

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:layout_marginHorizontal="33dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/actionsImage"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|top"
                                android:layout_marginTop="23dp"
                                android:contentDescription="ActionsImage"
                                app:srcCompat="@drawable/svg_actions_24px"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/actionsTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|bottom"
                                android:layout_marginBottom="10dp"
                                android:fontFamily="@font/roboto_mono_medium"
                                android:text="Actions"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText,VisualLintOverlap" />

                            <Button
                                android:id="@+id/actionsButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|top"
                                android:layout_marginTop="10dp"
                                android:background="?selectableItemBackgroundBorderless"
                                android:contentDescription="ActionsButton"
                                tools:ignore="HardcodedText" />

                        </FrameLayout>

                    </FrameLayout>

                </LinearLayout>

            </com.google.android.material.bottomnavigation.BottomNavigationView>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>