<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white_10" />
            <size
                android:width="232dp"
                android:height="146dp" />
        </shape>
    </item>
    <item android:gravity="bottom">
        <shape android:shape="rectangle">
            <solid android:color="@color/water_10" />
            <size
                android:width="232dp"
                android:height="120dp" />
        </shape>
    </item>
    <item
        android:top="10dp"
        android:drawable="@drawable/fish"
        android:gravity="center"
        android:right="150dp" />
    <item
        android:gravity="center"
        android:left="150dp"
        android:top="60dp">
        <rotate
            android:drawable="@drawable/fish"
            android:fromDegrees="180.0"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="180.0" />
    </item>

</layer-list>